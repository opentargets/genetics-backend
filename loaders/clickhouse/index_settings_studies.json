{
  "settings": {
    "index": {
      "number_of_replicas": 0,
      "analysis": {
        "filter": {
            "autocomplete_filter": {
                "type":     "edge_ngram",
                "min_gram": 1,
                "max_gram": 20,
                "token_chars": [
                  "letter",
                  "digit",
                  "punctuation",
                  "symbol"
                ]
            },
            "word_delimiter_filter": {
              "type": "word_delimiter",
              "catenate_numbers": false,
              "catenate_words": false,
              "generate_word_parts": true,
              "generate_number_parts": true,
              "catenate_all": false,
              "split_on_case_change": false,
              "split_on_numerics": false,
              "preserve_original": true,
              "stem_english_possesive": true
            }
        },
        "analyzer": {
            "autocomplete": {
                "type":      "custom",
                "tokenizer": "whitespace",
                "filter": [
                    "lowercase",
                    "word_delimiter_filter",
                    "autocomplete_filter"
                ]
            },
            "autocomplete_search": {
                "type":      "custom",
                "tokenizer": "whitespace",
                "filter": [
                    "lowercase",
                    "word_delimiter_filter"
                ]
            }
        }
      }
    }
  },
  "mappings": {
    "study": {
      "properties": {
        "ancestry_initial": {
          "type": "text",
          "fields": {
            "keyword": {
              "type": "keyword",
              "ignore_above": 256
            }
          }
        },
        "ancestry_replication": {
          "type": "text",
          "fields": {
            "keyword": {
              "type": "keyword",
              "ignore_above": 256
            }
          }
        },
        "n_cases": {
          "type": "long"
        },
        "n_initial": {
          "type": "long"
        },
        "n_replication": {
          "type": "long"
        },
        "num_assoc_loci": {
          "type": "long"
        },
        "has_sumstats": {
          "type": "boolean"
        },
        "pmid": {
          "type": "text",
          "fields": {
            "keyword": {
              "type": "keyword",
              "ignore_above": 256
            }
          }
        },
        "pub_author": {
          "type": "text",
          "fields": {
            "keyword": {
              "type": "keyword",
              "ignore_above": 256
            }
          },
          "copy_to": "mixed_field"
        },
        "pub_date": {
          "type": "date"
        },
        "pub_journal": {
          "type": "text",
          "fields": {
            "keyword": {
              "type": "keyword",
              "ignore_above": 256
            }
          },
          "copy_to": "mixed_field"
        },
        "pub_title": {
          "type": "text",
          "analyzer": "standard",
          "fields": {
            "keyword": {
              "type": "keyword",
              "ignore_above": 256
            },
            "completion": {
              "type": "completion"
            }
          },
          "copy_to": "mixed_field"
        },
        "study_id": {
          "type": "text",
          "fields": {
            "keyword": {
              "type": "keyword",
              "ignore_above": 256
            }
          }
        },
        "trait_category": {
          "type": "text",
          "fields": {
            "keyword": {
              "type": "keyword",
              "ignore_above": 256
            }
          }
        },
        "trait_efos": {
          "type": "text",
          "fields": {
            "keyword": {
              "type": "keyword",
              "ignore_above": 256
            }
          }
        },
        "trait_reported": {
          "type": "text",
          "fields": {
            "keyword": {
              "type": "keyword",
              "ignore_above": 256
            }
          },
          "copy_to": "mixed_field"
        },
        "mixed_field": {
          "type": "text",
          "analyzer": "autocomplete",
          "search_analyzer": "autocomplete_search"
        }
      }
    }
  }
}



